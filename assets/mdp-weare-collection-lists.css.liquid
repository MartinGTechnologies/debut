.mdp-weare-collection-lists {
    margin-top: 50px;
    margin-bottom: 50px;
    position: relative;
    z-index: 0;
}
.mdp-weare-collection-lists > .mdp-overlay {
    position: absolute;
    left: 0;
    top: 0;
    right: 0;
    bottom: 0;
    background-position: center;
    background-size: cover;
    pointer-events: none;
    z-index: -1;
    opacity: 0.1;
}
.mdp-weare-collection-lists > .mdp-container {
    position: relative;
}
.mdp-weare-collection-lists > .mdp-container > .mdp-row {
    display: flex;
    align-items: flex-start;
    flex-wrap: wrap;
    justify-content: space-between;
}
.mdp-weare-collection-lists > .mdp-container > .mdp-row > .mdp-title-column {
    flex: 1;
    width: 40%;
}

.mdp-weare-collection-lists > .mdp-container > .mdp-row > .mdp-title-column .mdp-title {
    font-family: "{{ settings.weare_font_header }}";
    font-style: normal;
    font-weight: bold;
    font-size: 32px;
    line-height: {{ settings.mdp_header_line_height }}em;
    color: {{ settings.mdp_header_color }};
}
.mdp-weare-collection-lists > .mdp-container > .mdp-row > .mdp-title-column .mdp-image-collection {
    width: 100%;
    margin-top: 18px !important;
    margin-bottom: 13px !important;
}
.mdp-weare-collection-lists > .mdp-container > .mdp-row > .mdp-title-column .mdp-subtitle {
    font-family: "{{ settings.weare_font_text }}";
    color: {{ settings.mdp_paragraph_color }};
    font-size: {{ settings.mdp_paragraph_font_size }}px;
    line-height: {{ settings.mdp_paragraph_line_height }}em;
    margin-top: 20px;
}
.mdp-weare-collection-lists > .mdp-container > .mdp-row > .mdp-title-column .mdp-button {
    margin-top: 23px;
    font-family: {{ settings.weare_font_text }};
    font-style: normal;
    font-weight: bold;
    font-size: 12px;
    line-height: 16px;
    text-align: center;
    letter-spacing: 0.4px;
    text-transform: uppercase;
    color: {{ settings.btn_color }};
    background-color: {{ settings.btn_background }};
    border-radius: 2px;
    display: inline-block;
    padding: 11px 24px;
}

.mdp-weare-collection-lists > .mdp-container > .mdp-row > .mdp-title-column .mdp-button:hover {
    background-color: {{ settings.btn_hover_background }};
    color: {{ settings.btn_hover_color }};
    transition: background-color 500ms, color 500ms;
}

.mdp-weare-collection-lists > .mdp-container > .mdp-row > .mdp-column {
    width: calc(20% - 30px);
    margin-right: 30px;
}
.mdp-weare-collection-lists > .mdp-container > .mdp-row > .mdp-column > .mdp-title {
    font-family: "{{ settings.weare_font_header }}";
    font-style: normal;
    font-weight: bold;
    text-transform: capitalize;
    font-size: 24px;
    line-height: {{ settings.mdp_header_line_height }}em;
    color: {{ settings.mdp_header_color }};
    margin-bottom: 16px;
}
.mdp-weare-collection-lists > .mdp-container > .mdp-row > .mdp-column .mdp-products > div,
.mdp-weare-collection-lists > .mdp-container > .mdp-row > .mdp-column .mdp-products > a {
    margin-bottom: 15px;
}
.mdp-weare-collection-lists > .mdp-container > .mdp-row > .mdp-column .mdp-products > div:last-child,
.mdp-weare-collection-lists > .mdp-container > .mdp-row > .mdp-column .mdp-products > a:last-child {
    margin-bottom: 0;
}
.mdp-weare-collection-lists.mdp-inverted > .mdp-container > .mdp-row > .mdp-title-column .mdp-title {
    color: white;
}
.mdp-weare-collection-lists.mdp-inverted > .mdp-container > .mdp-row > .mdp-title-column .mdp-subtitle {
