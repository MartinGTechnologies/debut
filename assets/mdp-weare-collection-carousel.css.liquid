.mdp-weare-collection-carousel {
    margin-top: 50px;
    margin-bottom: 50px;
}
.mdp-weare-collection-carousel > .mdp-header .mdp-title{
    font-family: {{ settings.weare_font_header }};
    font-style: normal;
    font-weight: bold;
    font-size: 38px;
    line-height: 39px;
    color: #343434;
    text-align: center;
}
.mdp-weare-collection-carousel > .mdp-header .mdp-subtitle{
    margin-bottom: 5px;
    font-family: {{ settings.weare_font_text }};
    font-style: normal;
    font-weight: bold;
    font-size: 16px;
    line-height: 22px;
    letter-spacing: 0.4px;
    text-transform: uppercase;
    color: #343434;
}
.mdp-weare-collection-carousel > .mdp-header .mdp-button{
    font-size: 15px;
    letter-spacing: 0.5px;
    display: inline-flex;
    white-space: nowrap;
    align-items: center;
    color: #2a2a2a;
    border-bottom: 1px solid transparent;
    position: relative;
    font-weight: normal;
}
.mdp-weare-collection-carousel > .mdp-header .mdp-button .mdp-text{
    margin-right: 5px;
}
.mdp-weare-collection-carousel > .mdp-header .mdp-button .mdp-icon{
    font-size: 0;
}
.mdp-weare-collection-carousel > .mdp-header .mdp-button .mdp-icon svg{
    width: 20px;
    height: 20px;
}
.mdp-weare-collection-carousel > .mdp-header .mdp-button::before{
    content: "";
    position: absolute;
    transition: 0.3s all ease-in-out;
    left: 0;
    right: 0;
    bottom: -4px;
    height: 0;
    border-bottom: 1px solid #2a2a2a;
    opacity: 0;
    transform: translateY(5px);
}
.mdp-weare-collection-carousel > .mdp-header .mdp-button:hover::before{
    opacity: 1;
    transform: translateY(0);
}
.mdp-weare-collection-carousel > .mdp-header .mdp-row-full{
    display: flex;
    align-items: flex-end;
    justify-content: space-between;
}
.mdp-weare-collection-carousel > .mdp-header .mdp-row-full .mdp-row-left{
    margin-right: 30px;
}
.mdp-weare-collection-carousel > .mdp-header{
    margin-bottom: 25px;
}
.mdp-weare-collection-carousel > .swiper-container > .swiper-wrapper{
    padding-bottom: 50px;
    height: auto;
}

.swiper-button-prev-collection-carousel:after,
.swiper-button-next-collection-carousel:after{
    color: white;
}

.swiper-button-prev-collection-carousel:hover:after,
.swiper-button-next-collection-carousel:hover:after{
    color: #E9384F;
}

.swiper-pagination-collection-carousel .swiper-pagination-bullet-active{
    background: #E9384F;
}

.swiper-collection-carousel .swiper-wrapper .swiper-slide .mdp-weare-product-card .mdp-media a,
.swiper-collection-carousel .swiper-wrapper .swiper-slide .mdp-weare-product-card .mdp-media a:hover {
    border: 0 !important;
}

.mdp-weare-collection-carousel .swiper-collection-carousel .swiper-wrapper .swiper-slide .mdp-weare-product-card .mdp-media a .mdp-box-product{
    overflow: hidden;
    background-color: #FFFFFF;
    text-align: center;
}

.mdp-weare-collection-carousel .swiper-collection-carousel .swiper-wrapper .swiper-slide .mdp-weare-product-card .mdp-media a .mdp-box-product .mdp-img-product{
    max-width: 100%;
    display: inline-block;
}

